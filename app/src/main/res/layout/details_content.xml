<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_15dp"
    android:paddingVertical="@dimen/dimen_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="@dimen/dimen_20sp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Inside the Complicated Reality of Being Americaâ€™s Oldest President"
        />


    <com.google.android.material.chip.Chip
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/section"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_12sp"
        android:backgroundTint="@color/colorPrimary"
        tools:text="New York"
        app:chipCornerRadius="@dimen/dimen_5dp"
        />



    <TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        tools:text="2023-06-06 09:00:44"
        android:textSize="@dimen/dimen_13sp"
        android:textStyle="normal"
        android:gravity="end"
        android:textColor="@color/colorRegentGray"
        app:layout_constraintStart_toEndOf="@+id/section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/section"
        app:layout_constraintBottom_toBottomOf="@+id/section"
        />



    <TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/keywords"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="@string/keywords"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_12sp"
        android:textStyle="bold"
        android:textColor="@color/colorRegentGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section"
        />

    <TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/keywordsValues"
        tools:text="2023-06-06 09:00:44"
        android:textSize="@dimen/dimen_12sp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:textStyle="normal"
        android:gravity="start"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/keywords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/keywords"

        />






    <TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/writtenBy"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="@string/written_by"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_12sp"
        android:textStyle="bold"
        android:textColor="@color/colorRegentGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keywordsValues"
        />

    <TextView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/writer"
        tools:text="2023-06-06 09:00:44"
        android:textSize="@dimen/dimen_12sp"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:textStyle="normal"
        android:gravity="start"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/writtenBy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/writtenBy"
        />



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textSize="@dimen/dimen_17sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/dimen_60dp"
        app:layout_constraintTop_toBottomOf="@+id/writer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Crime and Criminals;Volunteers and Community Service;Nine-One-One (911) (Emergency Phone Number);Police;Police Brutality, Misconduct and Shootings;internal-sub-only;Brownsville"
        />






</androidx.constraintlayout.widget.ConstraintLayout>